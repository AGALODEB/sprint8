<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hw___1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="settings_text_style" >
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:layout_marginStart"> 16dp</item>
    </style>
    <style name="icon" >
        <item name="cornerRadius"> 15dp</item>
        <item name="iconGravity"> textStart</item>
        <item name="iconPadding"> 10dp</item>
    </style>
    <style name="button_main" >
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:layout_marginStart"> 17dp</item>
        <item name="android:layout_marginEnd"> 15dp</item>
        <item name="android:layout_marginBottom"> 15dp</item>
        <item name="android:backgroundTint"> @color/black</item>
        <item name="android:textAppearance"> @style/title</item>
        <item name="android:textColor"> @color/white</item>
        <item name="cornerRadius"> 15dp</item>
        <item name="iconGravity"> textStart</item>
        <item name="iconPadding"> 10dp</item>
        <item name="iconTint"> @color/white</item>
        <item name="android:fontFamily"> sans-serif-medium</item>
    </style>
    <style name="settings_button_style" >
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:background"> ?android:attr/selectableItemBackground</item>
        <item name="iconGravity"> start</item>
        <item name="iconTint"> @color/gray</item>
    </style>
    <style name="settings_layout_style" >
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="paddingEnd"> 12dp</item>
        <item name="android:layout_weight"> 10</item>
        <item name="android:orientation"> horizontal</item>
        <item name="android:layout_marginTop"> 15dp</item>
        <item name="android:layout_marginEnd"> 15dp</item>
    </style>
    <style name="title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="buttons">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="settings_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="background_main" >
        <item name="android:background"> #E7AC37</item>
    </style>
    <style name="settings_back_icon">
        <item name="iconTint">@color/white</item>
    </style>
</resources>