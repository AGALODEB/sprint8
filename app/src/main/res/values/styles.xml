<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="settings_text_style" >
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:layout_marginStart"> 16dp</item>
    </style>
    <style name="icon" >
        <item name="cornerRadius"> 15dp</item>
        <item name="iconGravity"> textStart</item>
        <item name="iconPadding"> 10dp</item>
    </style>
    <style name="button_main" >
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:layout_marginStart"> 17dp</item>
        <item name="android:layout_marginEnd"> 15dp</item>
        <item name="android:layout_marginBottom"> 15dp</item>
        <item name="android:backgroundTint"> @color/white</item>
        <item name="android:textAppearance"> @style/title</item>
        <item name="android:textColor"> @color/black</item>
        <item name="cornerRadius"> 15dp</item>
        <item name="iconGravity"> textStart</item>
        <item name="iconPadding"> 10dp</item>
        <item name="iconTint"> @color/black</item>
        <item name="android:fontFamily"> sans-serif-medium</item>
    </style>
    <style name="settings_button_style" >
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:background"> ?android:attr/selectableItemBackground</item>
        <item name="iconGravity"> start</item>
        <item name="iconTint"> @color/gray</item>
    </style>
    <style name="settings_layout_style" >
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="paddingEnd"> 12dp</item>
        <item name="android:layout_weight"> 10</item>
        <item name="android:orientation"> horizontal</item>
        <item name="android:layout_marginTop"> 15dp</item>
        <item name="android:layout_marginEnd"> 15dp</item>
    </style>
</resources>